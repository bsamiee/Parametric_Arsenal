# ====================================================================
# GLOBAL DEFAULTS
# ====================================================================
[*]
end_of_line = lf                           # Unix line endings
insert_final_newline = true                # Add newline at EOF
charset = utf-8                            # UTF-8 encoding
trim_trailing_whitespace = true            # Remove trailing whitespace
indent_style = space                       # Use spaces not tabs
