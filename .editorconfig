# ====================================================================
# FINE-TUNING FOR DENSE CODE STYLE
# ====================================================================

# Allow blank lines in arrow expressions for readability in complex code
dotnet_diagnostic.IDE2006.severity = none

# CA1051: Allow readonly fields in private structs (used for cache keys)
dotnet_diagnostic.CA1051.severity = none

# CA2231, CA1815: Equality operators on private cache structs - not needed
dotnet_diagnostic.CA2231.severity = none
dotnet_diagnostic.CA1815.severity = none

# RCS1231: ref readonly parameters - too aggressive for current C# patterns
dotnet_diagnostic.RCS1231.severity = none

# MA0109: Span<T> overloads - not always appropriate for monadic patterns
dotnet_diagnostic.MA0109.severity = none

# RCS1238: Nested ternary - allowed for dense functional code
dotnet_diagnostic.RCS1238.severity = none
