<?xml version="1.0" encoding="utf-8"?>
<!-- NUnit + Rhino.Testing runsettings configuration -->
<!-- https://github.com/mcneel/Rhino.Testing -->
<RunSettings>
  <RunConfiguration>
    <!-- Maximum time to allow for test run (minutes) -->
    <TestSessionTimeout>300000</TestSessionTimeout>
    <!-- Disable parallel test execution for Rhino.Testing -->
    <MaxCpuCount>1</MaxCpuCount>
    <!-- Results directory -->
    <ResultsDirectory>./TestResults</ResultsDirectory>
  </RunConfiguration>

  <NUnit>
    <!-- Single threaded execution required for Rhino.Testing -->
    <NumberOfTestWorkers>1</NumberOfTestWorkers>
    <!-- Disable shadow copying for Rhino assemblies -->
    <ShadowCopyFiles>false</ShadowCopyFiles>
    <!-- Internal trace level for debugging -->
    <InternalTraceLevel>Off</InternalTraceLevel>
    <!-- Random seed for reproducible test runs -->
    <DefaultTestNamePattern>{m}{a}</DefaultTestNamePattern>
  </NUnit>
</RunSettings>
